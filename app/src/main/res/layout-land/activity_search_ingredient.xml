<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65739D"
    tools:context=".SearchIngredientActivity">


    <Button
        android:id="@+id/retrieve_meals"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/poppins_bold"
        android:text="Retrieve Meals"
        android:textColor="#474644"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/ingredient_input"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_meals"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/poppins_bold"
        android:text="Save Meals"
        android:textColor="#474644"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/retrieve_meals"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ingredient_input"
        android:layout_width="329dp"
        android:layout_height="56dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Ingredient"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/meal_details"
        android:layout_width="693dp"
        android:layout_height="273dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_medium"
        android:scrollbars="vertical"
        android:text="Meal Details Here"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredient_input" />
</androidx.constraintlayout.widget.ConstraintLayout>